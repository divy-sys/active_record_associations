
<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <%= form_with(model: @article, class: "shadow-lg p-4 mb-5 bg-dark text-light rounded") do |f| %>
        <div class="row">
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control", rows: 3 %>
          </div>
        </div>

        <div class="form-group text-center">
          <%= f.submit :submit, class: "btn btn-success mt-3"  %>
        </div>
      <% end %>
    </div>
  </div>
  
</div>
